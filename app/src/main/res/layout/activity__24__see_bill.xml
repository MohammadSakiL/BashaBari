<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._24_See_bill"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/owner_menu"
        android:padding="35sp">

        <ImageView
            android:id="@+id/back_arrow_btn_24"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/ntctext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:paddingBottom="20sp"
            android:text="BashaBari"
            android:textColor="@color/colorWhite"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ntctext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ntctext1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/futura_md_cn_bt"
            android:paddingBottom="15sp"
            android:text="Bills"
            android:textColor="@color/colorPrimary"
            android:textSize="60sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/billRecyler"
            android:layout_below="@id/ntctext2"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>







</LinearLayout>