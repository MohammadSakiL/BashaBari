<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/page_layout_12">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"

        android:background="@drawable/owner_menu"
        android:padding="35sp">


        <FrameLayout
            android:id="@+id/hide_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="hidekeyboard" >
        </FrameLayout>


        <TextView
            android:id="@+id/notice_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requests"
            android:textSize="70sp"
            android:fontFamily="@font/futura_md_cn_bt"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="15sp"
            />


        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/back_button"
            android:id="@+id/back_arrow_btn_12"
            />


        <EditText
            android:id="@+id/edit_rq_box_12"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@+id/notice_text2"
            android:fontFamily="@font/futura_md_cn_bt"
            android:hint="    Write your request in short"
            android:textSize="20sp"
            android:gravity="bottom"
            android:background="@drawable/rectangle"
            android:padding="10sp"
            />

        <ImageView
            android:id="@+id/add_rq_btn_12"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:src="@drawable/add_request_btn"
            android:layout_below="@+id/edit_rq_box_12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/request_recyclerview_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/add_rq_btn_12"
            android:padding="20dp"

            />

    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>