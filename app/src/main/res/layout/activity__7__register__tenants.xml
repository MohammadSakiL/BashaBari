<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page_layout_7"
    tools:context="._9_Manage_Tenants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenants Registration"
                android:textAlignment="center"
                android:paddingTop="25sp"
                android:paddingBottom="25sp"
                android:textSize="40sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorPrimary"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25sp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Name"
                android:textColor="@color/colorBlack"/>
            <EditText
                android:id="@+id/edtName7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_text_background"
                android:hint="Example"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Flat No"
                android:textColor="@color/colorBlack"/>


            <EditText
                android:id="@+id/edtFlat7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="Flat Number #" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="NID no."
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/edtNid7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="1998XXX" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Phone Number"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/edtPhoneNumber7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="018XXXXXXXX" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Password"
                android:textColor="@color/colorBlack"/>

            <EditText
                android:id="@+id/edtPassword7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="******" />

            <Button
                android:id="@+id/btnAddTenants7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Tenants"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:textColor="@color/colorWhite"

                />
            <TextView
                android:id="@+id/txtownerHome7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back To Home"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryPink"/>

        </LinearLayout>

    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
