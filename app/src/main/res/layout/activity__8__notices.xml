<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__8__notices"
    tools:context="._8_Notices">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/owner_menu"
        android:padding="35sp">


        <FrameLayout
            android:id="@+id/hide_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="hidekeyboard" >
        </FrameLayout>


        <TextView
            android:id="@+id/notice_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notices"
            android:textSize="70sp"
            android:fontFamily="@font/futura_md_cn_bt"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="15sp"
            />


        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/back_button"
            android:id="@+id/arrow_btn_8"
            />


        <EditText
            android:id="@+id/edit_notice_box_8"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_below="@+id/notice_text2"
            android:fontFamily="@font/futura_md_cn_bt"
            android:hint="    Write your notice in short"
            android:textSize="20sp"
            android:gravity="bottom"
            android:background="@drawable/rectangle"
            android:padding="10sp"
            />



        <ImageView
            android:id="@+id/add_notice_btn_8"
            android:layout_width="150sp"
            android:layout_height="60sp"
            android:src="@drawable/add_notice_btn"
            android:layout_below="@+id/edit_notice_box_8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notice_recyclerview_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/add_notice_btn_8"
            android:padding="20dp"
            tools:ignore="InvalidId" />


    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>