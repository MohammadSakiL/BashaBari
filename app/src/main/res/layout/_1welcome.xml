<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/welcome1"
    android:padding="35sp" >

    <TextView
        android:id="@+id/NewHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW HERE?"
        android:textSize="70sp"
        android:fontFamily="serif-monospace"
        android:textColor="#F8F4F4"
        android:textStyle="bold"
        android:paddingTop="50sp"
        />

    <TextView
        android:id="@+id/welcom_msg_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/NewHere"
        android:text="Create an account as a home owner then link your tenant's to your account"
        android:textColor="#F8F4F4"
        android:textSize="25sp"
        android:fontFamily="monospace"
        />

    <ImageView
        android:id="@+id/imgNextArrow2"
        android:layout_width="68dp"
        android:layout_height="82dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/next" />

</RelativeLayout>