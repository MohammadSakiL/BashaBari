<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingLeft="12dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tenantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mahfzur Rahman Shakil"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tenantFlat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A/1"
                    android:textSize="18sp"
                    />


                <TextView
                    android:id="@+id/tenantPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01867780753"
                    android:textSize="18sp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="3dp"
                        >

                        <Button
                            android:id="@+id/tenantNid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nid"
                            android:textSize="16dp"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/button_background"
                            android:textColor="@color/colorWhite"

                            />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="3dp"
                        >





                        <Button
                            android:id="@+id/removeTenant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remove"
                            android:textSize="16dp"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/button_background"
                            android:textColor="@color/colorWhite"

                            />

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tenantImage"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/update_profile"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>