<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="._13SentMessage"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/owner_menu"
        android:padding="35sp">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/back_button"
            android:id="@+id/arrow_btn_13"
            />

        <TextView
            android:id="@+id/txt13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textSize="70sp"
            android:fontFamily="@font/futura_md_cn_bt"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:paddingBottom="15sp"
            />

        <EditText
            android:id="@+id/to13"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/futura_md_cn_bt"
            android:hint="     To"
            android:textSize="20sp"
            android:gravity="bottom"
            android:background="@drawable/rectangle"
            android:layout_below="@+id/txt13"
            />

        <EditText
            android:id="@+id/message13"
            android:layout_below="@+id/to13"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:fontFamily="@font/futura_md_cn_bt"
            android:hint="    Write your message in short"
            android:textSize="20sp"
            android:gravity="bottom"
            android:background="@drawable/rectangle"
            android:padding="10sp"
            />

        <ImageView
            android:id="@+id/send13"
            android:layout_width="100sp"
            android:layout_height="60sp"
            android:src="@drawable/send_message"
            android:layout_below="@+id/message13"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            />



    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>