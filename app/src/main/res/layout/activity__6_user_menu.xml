<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_layout_6"
    tools:context="._6_User_menu"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tenantNav"
        app:headerLayout="@layout/owner_header"
        app:menu="@menu/tenant_menu"
        android:layout_gravity="start"/>



        <RelativeLayout

            android:id="@+id/home_layout_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/owner_menu"
            android:padding="35sp"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/btnMenu6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/menu_bar" />


            <ImageView
                android:id="@+id/tenant_profile_pic"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_below="@+id/tenantText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15sp"
                android:src="@drawable/profile_pic" />


            <TextView
                android:id="@+id/tenantText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"
                android:paddingBottom="20sp"
                android:text="BashaBari"
                android:textColor="@color/colorWhite"
                android:textSize="35sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/see_more_btn_6"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_below="@+id/request_recyclerview_6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:src="@drawable/see_more_btn" />

            <ImageView
                android:id="@+id/info_bg_1"
                android:layout_width="match_parent"
                android:layout_height="10sp"
                android:layout_below="@+id/addressTitle_6"
                android:background="@color/colorPrimaryDark" />


            <TextView
                android:id="@+id/nameTitle_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenant_profile_pic"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura_md_bt"
                android:paddingTop="20sp"
                android:text="User Menu"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/addressTitle_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTitle_6"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/futura_md_bt"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="5dp"
                android:text="edfgfg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recent_notice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_bg_1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura_md_cn_bt"
                android:paddingTop="35sp"
                android:paddingBottom="10dp"
                android:text="RECENT NOTICES"
                android:textColor="@color/colorWhite"
                android:textSize="28sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/request_recyclerview_6"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_below="@+id/recent_notice_text"
                android:layout_centerHorizontal="true"


                />

        </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>